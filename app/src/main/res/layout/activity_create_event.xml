<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CreateEvent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ToolbarTheme"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp"
                android:text="Vrsta događaja:" />

            <Spinner
                android:layout_margin="4dp"
                android:id="@+id/eventTypeSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Javni"
                android:padding="16dp" />

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp"
                android:text="Za grupu : " />

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/tvEventForUsers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingLeft="16dp"
                android:text=" " />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Naziv događaja"
                android:padding="16dp" />

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="Vrsta aktivnosti:" />

            <Spinner
                android:layout_margin="4dp"
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="activity"
                android:padding="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tvSkillRequired"
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="Predložena razina skilla za sudjelovanje : " />

            <LinearLayout
                android:layout_margin="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <CheckBox
                    android:id="@+id/checkBox1"
                    style="?android:attr/starStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    style="?android:attr/starStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:id="@+id/checkBox3"
                    style="?android:attr/starStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/checkBox4"
                    style="?android:attr/starStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <CheckBox
                    android:id="@+id/checkBox5"
                    style="?android:attr/starStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray" />

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="4dp"
                android:id="@+id/tvEventTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="Odredite vrijeme održavanja eventa:" />

            <Button

                android:id="@+id/btnTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/interest_button"
                android:text="Vrijeme"
                android:textColor="?android:colorBackground" />

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="4dp"
                android:id="@+id/tvTimeStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:layout_gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray" />


            <Button
                android:id="@+id/btnDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/interest_button"
                android:text="Datum"
                android:textColor="?android:colorBackground" />

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="4dp"
                android:id="@+id/tvDateOfEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:layout_gravity="center"/>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray" />

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="Izaberite mjesto:"
                />

            <Button
                android:id="@+id/btnMap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/interest_button"
                android:text="mjesto"
                android:textColor="?android:colorBackground" />

            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:layout_margin="4dp"
                android:id="@+id/tvPlaceAdress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:layout_gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray" />

            <EditText
                android:layout_margin="4dp"
                android:id="@+id/etPlayersNeeded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Potreban broj igrača"
                android:inputType="number"
                android:padding="16dp" />

            <EditText
                android:layout_margin="4dp"
                android:id="@+id/etEventDescription"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Opis događaja"
                android:padding="16dp" />

            <ProgressBar

                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible" />




                <Button
                    android:layout_margin="12dp"
                    android:id="@+id/btnCreateEvent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="50dp"
                    android:background="@drawable/interest_button"
                    android:padding="16dp"
                    android:text="Napravi"
                    android:textColor="?android:colorBackground" />




        </LinearLayout>


    </ScrollView>


</LinearLayout>