<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InsideEvent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="16dp"
            android:text="Pozovite igrače" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingTop="16dp"
            android:text="Event name:" />

        <TextView
            android:id="@+id/tvEventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="name"
            android:paddingLeft="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="Activity played:" />

        <TextView
            android:id="@+id/tvEventActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="activity"
            android:paddingLeft="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="at what time?"
            android:paddingLeft="16dp"
            android:text="At what time ?" />

        <TextView
            android:id="@+id/tvEventTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="at what time?"
            android:paddingLeft="16dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Place"
            android:paddingLeft="16dp"
            android:text="Where is the event taking place:" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvEventPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Place"
                android:inputType="number"
                android:paddingLeft="16dp" />

            <ImageView
                android:id="@+id/ivEventPlaceMap"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:layout_marginLeft="12dp"
                android:background="#009b12"
                android:src="@android:drawable/ic_dialog_map" />


        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="players needed"
            android:paddingLeft="16dp"
            android:text="How many players are needed:" />

        <TextView
            android:id="@+id/tvPlayersNeeded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="players needed"
            android:paddingLeft="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="players entered"
            android:paddingLeft="16dp"
            android:text="How many players are currently in event :" />

        <TextView
            android:id="@+id/tvPlayersEntered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="players entered"
            android:inputType="number"
            android:paddingLeft="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="Event description:" />

        <TextView
            android:id="@+id/tvEventDescription"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:hint="Description"
            android:paddingLeft="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCompleteEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="16dp"
                android:padding="16dp"
                android:text="ZAVRŠITE DOGAĐAJ "
                android:visibility="invisible" />

            <Button
                android:id="@+id/btnDoSomething"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="70dp"
                android:padding="16dp"
                android:text=" " />


        </LinearLayout>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            app:srcCompat="@android:drawable/ic_dialog_email" />



    </LinearLayout>



</ScrollView>