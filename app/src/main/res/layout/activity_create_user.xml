<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginCreateUser.CreateUser">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:layout_margin="2dp"/>

            <EditText
                android:layout_margin="2dp"
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password" />

            <EditText
                android:layout_margin="2dp"
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ime" />

            <EditText
                android:layout_margin="2dp"
                android:id="@+id/etSurname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Prezime" />

            <EditText
                android:layout_margin="2dp"
                android:id="@+id/etDescripiton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="O meni" />

            <TextView
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Najdalja udaljesnost događaja : " />

            <TextView
                android:layout_margin="2dp"
                android:id="@+id/tvSeekBarShower"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.AppCompatSeekBar
                android:layout_margin="2dp"
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:max="100" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray" />


            <TextView
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Izaberite svoje intererse:" />

            <LinearLayout
                android:layout_margin="2dp"
                android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:padding="6dp"
                    android:id="@+id/btnNogomet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/interest_button"
                    android:text="Nogomet"
                    android:textColor="#ffff"
                    android:layout_margin="2dp"/>

                <Button
                    android:padding="6dp"
                    android:layout_margin="2dp"
                    android:id="@+id/btnKosarka"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/interest_button"
                    android:text="Košarka"
                    android:textColor="#ffff" />
                <Button
                    android:padding="6dp"
                    android:layout_margin="2dp"
                    android:id="@+id/btnOstalo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/interest_button"
                    android:text="Ostalo"
                    android:textColor="#ffff" />



            </LinearLayout>

            <LinearLayout
                android:layout_margin="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:padding="6dp"
                    android:layout_margin="2dp"
                    android:id="@+id/btnSah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/interest_button"
                    android:text="Šah"
                    android:textColor="#ffff" />

                <Button

                    android:layout_margin="2dp"
                    android:id="@+id/btnDrustveneIgre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/interest_button"
                    android:text="Društvene igre"
                    android:textColor="#ffff"
                    android:padding="6dp"/>

                <Button
                    android:padding="6dp"
                    android:layout_margin="2dp"
                    android:id="@+id/btnDruzenje"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/interest_button"
                    android:text="Druženje"
                    android:textColor="#ffff" />


            </LinearLayout>

            <TextView
                android:id="@+id/tvShowInterest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="6dp"
                android:text="Izaberite sliku profila" />

            <ImageView
                android:id="@+id/ivProfilePicture"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="6dp"
                android:clickable="true"
                android:src="@drawable/avatar" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="4dp"
                android:background="@android:color/darker_gray" />

            <Button
                android:layout_marginTop="6dp"
                android:id="@+id/btnCreateAcc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Stvorite igrača"
                android:background="@drawable/interest_button"
                android:textColor="?android:colorBackground"
                android:padding="6dp"/>

            <ProgressBar
                android:id="@+id/progressBarUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>